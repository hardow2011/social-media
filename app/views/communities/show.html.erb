<main class="section">
  <div class="container">
    <div class="block">
      <div class="columns is-vcentered">
        <% if user_signed_in? %>
          <div class="column is-flex is-justify-content-flex-end">
          <%= link_to "New Post",
                      new_post_path(@community),
                      class: "button is-link" %>
          </div>
        <% end %>
    </div>
    </div>
    <div class="block">
        <h1 class="title is-1"><%= @community.name %></h1>
        <p>c/<%= @community.handle %></p>
        <h3 class="subtitle is-3"><%= @community.description %></h3>
    </div>
    <div class="block">
      <%= render @community.posts %>
    </div>
  </div>
</main>