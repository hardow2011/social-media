<main class="section">
  <div class="container">
    <div class="block">
      <div class="columns is-justify-content-flex-end	 is-vcentered">
          <% if user_signed_in? %>
            <div class="column is-narrow">
              <%= link_to "New Post",
                          new_post_path(@community),
                          class: "button is-link" %>
            </div>
            <div class="column is-narrow">
              <%= form_with url: join_community_path(@community) do |f| %>
                <%= f.submit current_user.belongs_to_community?(@community) ? 'Joined' : 'Join', class: "button is-link" %>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
    <div class="block">
        <h1>c/<%= @community.handle %></h1>
        <h4 class="subtitle is-3"><%= @community.description %></h4>
    </div>
    <div class="block">
      <%= render @posts %>
    </div>
    <div class="block">
      <nav class="pagination" role="navigation" aria-label="pagination">
        <%= link_to 'Last page', community_path(@community, page: @page-1), class: 'pagination-previous' %>
        <%= link_to 'Next page', community_path(@community, page: @page+1), class: "pagination-next" %>
      </nav>
    </div>
    <div class="block">
    </div>
  </div>
</main>