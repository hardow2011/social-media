<%= form_with model: community do |f| %>
    <% if community.errors.any? %>
        <div>
            <%= community.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>
    <div class="columns">
        <div class="column">
            <div class="field">
                <%= f.label :name, "Name", class: 'label' %>
                <div class="control">
                    <%= f.text_field :name, class: 'input' %>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <%= f.label :description, "Description", class: 'label' %>
                <div class="control">
                    <%= f.text_field :description, class: 'input' %>
                </div>
            </div>
        </div>
        <div class="column">
        </div>
    </div>
    <div class="block">
        <div class="buttons is-right">
            <% unless community.new_record? %>
                <%= link_to 'Back to Posts', community_path(community.handle), class: 'button' %>
            <% end %>
            <%= f.submit class: 'button is-success' %>
        </div>
    </div>
<% end %>