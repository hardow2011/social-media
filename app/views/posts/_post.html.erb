<div class="comment block">
  <div class="card">
    <div class="card-content">
      <div class="columns">
          <div class="column">
              <%= link_to post.caption, post_path(post) %>
          </div>
          <% if post.user == current_user %>
          <div class="column is-narrow">
              <div class="buttons is-right">
                  <%= button_to "Delete",
                              post_path(post),
                              method: :delete,
                              class: 'button is-danger' %>
                  <%= link_to "Edit",
                              edit_post_path(post),
                              class: 'button is-link' %>
              </div>
          </div>
          <% end %>
      </div>
    </div>
    <footer class="card-footer">
      <div class="card-footer-item is-justify-content-flex-end">
        <div class="buttons is-right">
          <%= form_with url: vote_post_path(post.id) do |f| %>
            <%= f.hidden_field :upvote, value: true %> 
            <%= f.submit "Like", class: 'button is-success' %>
          <% end %>
          <p>
            <%= "#{post.upvote_sum} #{'Like'.pluralize(post.upvote_sum)}" %>
          </p>
          <%= form_with url: vote_post_path(post.id) do |f| %>
            <%= f.hidden_field :upvote, value: false %> 
            <%= f.submit "Dislike", class: 'button is-success' %>
          <% end %>
        </div>
      </div>
    </footer>
  </div>
</div>