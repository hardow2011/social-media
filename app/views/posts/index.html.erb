<div class="container">
    <div class="columns is-vcentered">
        <div class="column">
        <h1 class="title is-1">Posts</h1>
        </div>
        <div class="column is-narrow">
        <%= link_to "New Post",
                    new_post_path,
                    class: "button is-link" %>
        <%= link_to "New Community",
                    new_community_path,
                    class: "button is-link" %>
        </div>
    </div>
        <% for community in @communities %>
            <%= link_to community.handle, community_path(community.handle) %>
        <% end %>
    <%= render @posts %>
</div>